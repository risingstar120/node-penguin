extends layout

block content
	//- console.log(model)
	table.table.table-striped.table-hover
		thead
			tr
				th #
				each field in model.fields
					- console.log(field)
					if -1 != field.$p.display.indexOf('l')
						th=t(field.path)

		tbody
			each row in docs
				- var id = row._id.toString()
				tr(data-id=)
					td
						a(href='#{model.path}/#{id}') Edit
					each field in model.fields
						- if (-1 == field.$p.display.indexOf('l')) continue;
						if 'ObjectID' == field.instance
							td
								a(href='#{field.$p.refModel.path}/#{row[field.path]._id}')=row[field.path].$pTitle
						else
							td=row[field.path]
